{
  "exclude": ["./coverage", "./dist", "jest.config.js"],
  "include": ["./src", "src/**/*", "__tests__"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  // "files": ["./types.d.ts", "./src/server.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "checkJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./src/router/*",
        "./src/data/*",
        "./src/events/*",
        "./src/logs/*",
        "./src/operations/*",
        "./src/utils/*",
        "./src/middleware/*",
        "./src/defs/*",
        "./src/defs/responses/*",
        "./src/defs/interfaces/*",
        "./src/defs/requests/*"
      ]
    }
  }
}
